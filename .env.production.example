# EVE Online Management Platform - Production Environment Variables
# Copy this file to .env and fill in your actual values

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
POSTGRES_USER=eve_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=eve_db

# ==============================================================================
# APPLICATION SECURITY
# ==============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_ME_GENERATE_RANDOM_SECRET_KEY

# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=CHANGE_ME_GENERATE_FERNET_KEY

# ==============================================================================
# EVE ONLINE ESI INTEGRATION
# ==============================================================================
# Register your app at: https://developers.eveonline.com/applications
ESI_CLIENT_ID=your_esi_client_id_here
ESI_CLIENT_SECRET=your_esi_client_secret_here
ESI_CALLBACK_URL=https://eveseat.tawfiqulbari.work/api/v1/auth/callback
ESI_BASE_URL=https://esi.evetech.net/latest

# ==============================================================================
# DOMAIN AND URLS
# ==============================================================================
# Your main domain
DOMAIN=eveseat.tawfiqulbari.work

# Frontend build-time environment variables
VITE_API_URL=https://eveseat.tawfiqulbari.work/api/v1
VITE_WS_URL=wss://eveseat.tawfiqulbari.work/ws

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=https://eveseat.tawfiqulbari.work

# ==============================================================================
# ZKILLBOARD INTEGRATION (Optional)
# ==============================================================================
# Generate unique ID: python -c "import uuid; print(str(uuid.uuid4()))"
ZKILL_REDISQ_QUEUE_ID=your_unique_queue_id_here

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================
DEBUG=False
LOG_LEVEL=INFO

# ==============================================================================
# SSL/TLS CONFIGURATION (for Traefik Let's Encrypt)
# ==============================================================================
# Email for Let's Encrypt notifications
LETSENCRYPT_EMAIL=tawfiqulbari@gmail.com

# ==============================================================================
# OPTIONAL: DATABASE PERFORMANCE TUNING
# ==============================================================================
# Uncomment and adjust based on your server resources
# POSTGRES_MAX_CONNECTIONS=100
# POSTGRES_SHARED_BUFFERS=256MB
# POSTGRES_EFFECTIVE_CACHE_SIZE=1GB

# ==============================================================================
# OPTIONAL: CELERY CONFIGURATION
# ==============================================================================
# Number of concurrent Celery workers (default: 4)
# Adjust based on CPU cores: recommended = CPU cores - 1
# CELERY_WORKER_CONCURRENCY=4

# ==============================================================================
# OPTIONAL: REDIS CONFIGURATION
# ==============================================================================
# REDIS_PASSWORD=optional_redis_password_here
